  tab    q      w      e      r      t      y      u      i      o      p      [      ]      \
  esc    a      s      d      f      g    @hctl    j      k      l      ;      '      ret
 @osls   z      x      c      v      b      n      m      ,      .      /    @osrs    up
  lctl  lmet   lalt                 spc                  ralt   rmet   rctl   lft    down   rght
)

